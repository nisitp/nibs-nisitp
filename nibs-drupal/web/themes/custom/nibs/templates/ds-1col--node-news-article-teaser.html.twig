{#
/**
 * @file
 * Display Suite 1 column template.
 *
 * Available variables:
 * - ds_content_wrapper: wrapper around content
 * - attributes: content region attributes
 * - ds_content: content region  {% if ds_content.field_overview|render is not empty or ds_content.body|render is not empty %}
 */
#}
<{{ ds_content_wrapper }}{{ attributes.addClass('ds-1col', 'clearfix') }}>
  <div class="title">
    <h3>{{ ds_content.node_title|render|striptags }} <span class="up"><i class="fa fa-chevron-up"></i></span><span class="down"><i class="fa fa-chevron-down"></i></span></h3>
  </div>
  <div class="content hide">
  {{ ds_content|without('node_title') }}
  </div>
</{{ ds_content_wrapper }}>